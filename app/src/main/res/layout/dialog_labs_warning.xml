<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="?android:attr/dialogPreferredPadding"
    android:paddingEnd="?android:attr/dialogPreferredPadding"
    android:paddingTop="?android:attr/dialogPreferredPadding"
    android:paddingBottom="?android:attr/dialogPreferredPadding">

    <TextView
        android:id="@+id/labsWarningTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/labs_warning_title"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title" />

    <TextView
        android:id="@+id/labsWarningMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_body_margin_top"
        android:text="@string/labs_warning_message"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_setting_value" />

    <LinearLayout
        android:id="@+id/labsWarningActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:attr/dialogPreferredPadding"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkboxDontShowAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/labs_warning_dont_show_again"
            android:textColor="@color/text_secondary" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="64dp"
            android:text="@string/labs_warning_confirm"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
