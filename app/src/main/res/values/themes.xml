<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RefreshPaper" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorPrimary">@android:color/white</item>
    </style>
    <style name="Theme.RefreshPaper" parent="Base.Theme.RefreshPaper" />

    <style name="Theme.RefreshPaper.BrightnessDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.RefreshPaper.StatusBarSettingsDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
