<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RefreshPaper" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="switchStyle">@style/AppTheme.Switch</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@android:color/white</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
    </style>
    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@android:color/black</item>
        <item name="trackTint">@android:color/darker_gray</item>
    </style>
    <style name="Theme.RefreshPaper" parent="Base.Theme.RefreshPaper" />
</resources>
